<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Books Management Web Application</display-name>

	<context-param>
		<param-name>jdbcURL</param-name>
		<param-value>jdbc:mysql://127.0.0.1:3306/bookstore?useUnicode=true&amp;serverTimezone=UTC</param-value>
	</context-param>

	<context-param>
		<param-name>jdbcUsername</param-name>
		<param-value>root</param-value>
	</context-param>

	<context-param>
		<param-name>jdbcPassword</param-name>
		<param-value>1234</param-value>
	</context-param>




	<servlet>
		<servlet-name>BookListServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.BookListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookListServlet</servlet-name>
		<url-pattern>/book</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookEditServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.BookEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookEditServlet</servlet-name>
		<url-pattern>/bookEdit</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookUpdateServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.BookUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookUpdateServlet</servlet-name>
		<url-pattern>/bookUpdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>BookDeleteServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.BookDeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookDeleteServlet</servlet-name>
		<url-pattern>/bookDelete</url-pattern>
	</servlet-mapping>






	<servlet>
		<servlet-name>LotteryTypeListServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.LotteryTypeListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LotteryTypeListServlet</servlet-name>
		<url-pattern>/lottery_type</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LotteryTypeEditServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.LotteryTypeEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LotteryTypeEditServlet</servlet-name>
		<url-pattern>/lotteryTypeEdit</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LotteryTypeUpdateServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.LotteryTypeUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LotteryTypeUpdateServlet</servlet-name>
		<url-pattern>/lotteryTypeUpdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LotteryTypeDeleteServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.LotteryTypeDeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LotteryTypeDeleteServlet</servlet-name>
		<url-pattern>/lotteryTypeDelete</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>PrizeListServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.PrizeListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PrizeListServlet</servlet-name>
		<url-pattern>/prize</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PrizeEditServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.PrizeEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PrizeEditServlet</servlet-name>
		<url-pattern>/prizeEdit</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PrizeUpdateServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.PrizeUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PrizeUpdateServlet</servlet-name>
		<url-pattern>/prizeUpdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PrizeDeleteServlet</servlet-name>
		<servlet-class>net.codejava.javaee.bookstore.PrizeDeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PrizeDeleteServlet</servlet-name>
		<url-pattern>/prizeDelete</url-pattern>
	</servlet-mapping>
	
	
		


	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/Error.jsp</location>
	</error-page>

</web-app>